Homogeneous Cube w reflective BC

  start problem
    execution = yes
    lambda = 0
    type=fsrc ;
    sweep=precomp
    page_refl=save
    innerconv=1E-12 ; outerconv=1E-7
    maxinner = 2 ; maxouter = 500
  end problem

  start inout
    mesh_file     = homogeneous_fine.thrm
    xs_file       = homogeneous.xs
    source_file   = homogeneous.src
    flux_file     = homogeneous.flux
    print_xs = yes
  end inout

  start cross_sections
     ngroups=1 ; upscattering = no ;
     multiplying = no
  end cross_sections

  start quadrature
    qdtype=levelsym ; qdorder = 8
  end quadrature

  start regionmap
     1
  end regionmap

end file
